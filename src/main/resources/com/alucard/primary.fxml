<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.alucard.PrimaryController">
   <children>
      <Label text="Lottery Calculator App" />
      <Label text="How many balls?" />
      <Spinner id="ballAmount" editable="true" />
      <Label text="Value range for balls:" />
      <HBox alignment="CENTER" prefWidth="200.0">
         <children>
            <Label text="Min:" />
            <Spinner fx:id="minBallValue" editable="true" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="30.0" layoutY="184.0">
         <children>
            <Label text="Max:" />
            <Spinner fx:id="maxBallValue" editable="true" minWidth="-Infinity" />
         </children>
      </HBox>
      <Button id="btnCalculate" alignment="CENTER" mnemonicParsing="false" text="Calculate" textAlignment="CENTER" />
      <Label id="resultText" />
      <Button fx:id="primaryButton" onAction="#switchToSecondary" text="Switch to Secondary View" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
